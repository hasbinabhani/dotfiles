configuration {
	hover-select:				true;
	me-select-entry:			"";
	me-accept-entry:			"MousePrimary";
}

@import "shared.rasi"

window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
// #    width:                       1000px;
    width:                       1000px;
    border-radius:               40px;
    cursor:                      "default";
    background-color:            @background-alt;
}

mainbox {
    enabled:                     true;
    spacing:                     20px; //50px;
    margin:                      60px; //50px;
    background-color:            transparent;
    children:                    [ "inputbar", "listview", "message" ];
}

inputbar {
    enabled:                     true;
    background-color:            transparent;
    children:                    [ "dummy", "prompt", "dummy"];
}

dummy {
    background-color:            transparent;
}

prompt {
    enabled:                     true;
    font:                        "JetBrainsMono Nerd Font Bold 30";
    background-color:            transparent;
    text-color:                  @foreground;
}

message {
    enabled:                     true;
    margin:                      0px 200px;
    padding:                     8px;
    border-radius:               8px;
    background-color:            white/5%;
    text-color:                  @foreground;
}

textbox {
    font:                        "JetBrainsMono Nerd Font 10";
    background-color:            transparent;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

listview {
    enabled:                     true;
    expand:                      false;
    columns:                     5;
    lines:                       1;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     20px;
    background-color:            transparent;
    cursor:                      "default";
}

element {
    enabled:                     true;
    padding:                     28px 5px;
    border-radius:               50px;
    background-color:            white/5%;
    text-color:                  @foreground;
    cursor:                      pointer;
}

element-text {
    font:                        "Material Design Icons Desktop 58";
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

element selected.normal {
    background-color:            white/15%;
    text-color:                  @selected;
}
